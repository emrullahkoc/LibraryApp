@model MainPage

<div class="card">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">

            <input type="hidden" asp-for="Id" />

            <input class="form-control mb-3" type="text" placeholder="Başlık" asp-for="Title">
            <span class="text-danger" asp-validation-for="Title"></span>

            <textarea class="form-control mb-3 ckeditor" type="text" placeholder="Açıklama" asp-for="Description" rows="4"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span> <!--Hata Mesajı-->

            <br />
            <input class="form-control" type="file" name="img" id="img" accept="image/*"/>
            <span class="text-danger" asp-validation-for="ImageUrl"></span> <!--Hata Mesajı-->

            <br />

            <div class="d-flex justify-content-end">
                <a href="/Management/MainPage/Index" class="btn btn-warning">İptal Et</a>
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>