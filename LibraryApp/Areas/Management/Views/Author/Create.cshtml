@model Author

<div class="card">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">

            <input class="form-control mb-3" type="text" placeholder="İsim Soyisim" asp-for="FullName">
            <span class="text-danger" asp-validation-for="FullName"></span>

            <textarea class="form-control mb-3 ckeditor" type="text" placeholder="Hakkında" asp-for="Description" rows="4"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span> <!--Hata Mesajı-->

            <br />
            <input class="form-control" type="file" name="img" id="img" accept="image/*" />
            <span class="text-danger" asp-validation-for="ImageUrl"></span> <!--Hata Mesajı-->
            <br />

            <input class="form-control mb-3" type="date" placeholder="Doğum Tarihi" asp-for="BirthDate">
            <span class="text-danger" asp-validation-for="BirthDate"></span><!--Hata Mesajı-->

            <input class="form-control mb-3" type="date" placeholder="Ölüm Tarihi" asp-for="DeathDate">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
            <a href="/Management/Author/Index" class="btn btn-warning">İptal Et</a>
        </form>
    </div>
</div>