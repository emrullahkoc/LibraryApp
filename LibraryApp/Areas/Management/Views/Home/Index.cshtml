@model LibraryApp.Models.ViewModels.DashboardViewModel

<div class="row">
    <a href="/Management/Book/Index/" class="col-12 col-lg-3">
        <div class="card radius-15 bg-voilet">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div>
                        <h2 class="mb-0 text-white">@Model.AuthorCount </h2>
                    </div>
                    <div class="ms-auto font-35 text-white">
                        <i class="lni lni-write"></i>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <div>
                        <p class="mb-0 text-white">Yazar Sayısı</p>
                    </div>
                </div>
            </div>
        </div>
    </a>
    <a href="/Management/Category/Index/" class="col-12 col-lg-3">
        <div class="card radius-15 bg-primary-blue">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div>
                        <h2 class="mb-0 text-white">@Model.CategoryCount </h2>
                    </div>
                    <div class="ms-auto font-35 text-white">
                        <i class="lni lni-write"></i>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <div>
                        <p class="mb-0 text-white">Kategori Sayısı</p>
                    </div>
                </div>
            </div>
        </div>
    </a>
    <a href="/Management/Book/Index/" class="col-12 col-lg-3">
        <div class="card radius-15 bg-rose">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div>
                        <h2 class="mb-0 text-white">@Model.BookCount</h2>
                    </div>
                    <div class="ms-auto font-35 text-white">
                        <i class="lni lni-book"></i>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <div>
                        <p class="mb-0 text-white">Kitap Sayısı</p>
                    </div>
                </div>
            </div>
        </div>
    </a>
</div>
<div class="card radius-15">
    <div class="card-body">
        <div class="card-title">
            <h4 class="mb-0">Son Eklenen 5 Kitap</h4>
        </div>
        <hr>
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th scope="col">Sıra No</th>
                        <th scope="col">Görseli</th>
                        <th scope="col">Kitap Adı</th>
                        <th scope="col">Yazarı</th>
                        <th scope="col">Türü</th>
                        <th scope="col">Güncelleme Tarihi</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int rowNumber = 1;
                    }
                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>@rowNumber</td>
                            <td><img src="@item.ImageUrl" width="75px" /></td>
                            <td>@item.Name</td>
                            <td>@item.Author?.FullName</td>
                            <td>@item.Category?.Name</td>
                            <td>@item.CreatedDate.ToString("dd MMMM yyyy")</td>
                            <td>
                                <a class="btn btn-success"
                                   href="/Management/Book/Details/@item.Id">Detay</a>

                                <a class="btn btn-warning"
                                   href="/Management/Book/Edit/@item.Id">Düzenle</a>

                                <button class="btn btn-danger" onclick="deleteBook(@item.Id);">Sil</button>
                            </td>
                        </tr>
                        rowNumber++;
                    }
                </tbody>
            </table>
            <a href="/Management/Book/Create" class="btn btn-primary">Yeni Kitap Ekle</a>
        </div>
    </div>
</div>
