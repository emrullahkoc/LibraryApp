@model IEnumerable<Author>

<div class="card radius-15">
	<div class="card-body">
		<div class="card-title">
			<h4 class="mb-0">Yazar Listesi</h4>
		</div>
		<hr>
		<div class="table-responsive">
			<table class="table mb-0">
				<thead>
					<tr>
						<th scope="col">Id</th>
						<th scope="col">İsim Soyisim</th>
						<th scope="col">Resim</th>
						<th scope="col">Doğum Tarihi</th>
						<th scope="col">Güncelleme Tarihi</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<th scope="row">@item.Id</th>
							<td>@item.FullName</td>
							<td><img src="@item.ImageUrl" width="75px" /></td>
							<td>@item.BirthDate.ToString("dd MMMM yyyy")</td>
							<td>@item.CreatedDate.ToString("dd MMMM yyyy")</td>
							<td>
								<a class="btn btn-success"
								   href="/Management/Author/Details/@item.Id">Detay</a>

								<a class="btn btn-warning"
								   href="/Management/Author/Edit/@item.Id">Düzenle</a>

								<a class="btn btn-danger"
								   href="/Management/Author/Delete/@item.Id">Sil</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
			<a href="/Management/Author/Create" class="btn btn-primary">Yeni Yazar Ekle</a>
		</div>
	</div>
</div>