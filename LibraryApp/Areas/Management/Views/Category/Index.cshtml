@model IEnumerable<Category>

<div class="card radius-15">
	<div class="card-body">
		<div class="card-title">
			<h4 class="mb-0">Kategori Listesi</h4>
		</div>
		<hr>
		<div class="table-responsive">
			<table class="table mb-0">
				<thead>
					<tr>
						<th scope="col">Sıra No</th>
						<th scope="col">Kategori Adı</th>
						<th scope="col">Resim</th>
						<th scope="col">Güncelleme Tarihi</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@{
						int rowNumber = 1;
					}
					@foreach (var item in Model)
					{
						<tr>
							<th scope="row">@rowNumber</th>
							<td>@item.Name</td>
							<td><img src="@item.ImageURL" width="75px" /></td>
							<td>@item.CreatedDate.ToString("dd MMMM yyyy")</td>
							<td>
								<a class="btn btn-success"
								   href="/Management/Category/Details/@item.Id">Detay</a>

								<a class="btn btn-warning"
								   href="/Management/Category/Edit/@item.Id">Düzenle</a>

								<a class="btn btn-danger"
								   href="/Management/Category/Delete/@item.Id">Sil</a>
							</td>
						</tr>
						rowNumber++;
					}
				</tbody>
			</table>
			<a href="/Management/Category/Create" class="btn btn-primary">Yeni Kategori Ekle</a>
		</div>
	</div>
</div>